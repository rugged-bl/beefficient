<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    tools:ignore="Overdraw">

    <View
        android:id="@+id/priority_indicator"
        android:layout_width="@dimen/priority_indicator_width"
        android:layout_height="match_parent"
        tools:background="@color/colorMediumPriority"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_task_padding"
        android:paddingEnd="@dimen/item_task_padding"
        android:paddingStart="@dimen/item_task_padding"
        android:paddingTop="@dimen/item_task_padding">

        <CheckBox
            android:id="@+id/checkbox_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/main_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_task_text_left_padding"
            android:layout_marginStart="@dimen/item_task_text_left_padding">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:autoLink="web|email|phone"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Long long long task title"/>

            <TextView
                android:id="@+id/labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/due_date"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="gone"
                tools:text="calls, work"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:drawablePadding="4dp"
                android:maxLines="1"
                android:layout_marginEnd="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="gone"
                tools:text="Tomorrow, 11:00"
                tools:visibility="visible"
                android:layout_marginRight="4dp"/>

            <TextView
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/due_date"
                android:layout_toEndOf="@+id/due_date"
                android:layout_toRightOf="@+id/due_date"
                android:drawablePadding="4dp"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="visible"
                tools:text="Inbox"/>

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>