<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.LoginScreen" parent="AppTheme.NoActionBar"/>
    <style name="AppTheme.AddEditTaskScreen" parent="AppTheme.NoActionBar"/>
    <style name="AppTheme.TaskDetailScreen" parent="AppTheme.NoActionBar"/>

    <style name="NavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_end</item>
    </style>

    <style name="TextAppearance.AppTheme.SectionHeader" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TaskEditText" parent="AppTheme.AppBarOverlay">
        <item name="colorAccent">#40C4FF</item>
    </style>

    <!--<style name="TextAppearance.AppTheme.CompletedTask" parent="TextAppearance.AppCompat.Subhead"/>-->
</resources>